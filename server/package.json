{
  "name": "quizluv-server",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "migrate": "ts-node src/scripts/migrate.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "setup": "npm run migrate && npm run seed",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "cross-env NODE_ENV=test DB_PATH=./data/test.db ts-node src/scripts/migrate.ts && ts-node src/scripts/seed.ts && jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test DB_PATH=./data/test.db jest --watch"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^2.0.16",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5"
  }
}
